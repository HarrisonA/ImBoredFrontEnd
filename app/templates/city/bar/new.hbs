<div class="container">
<div class="jumbotron">

  <h2>Add a bar</h2>
  <form>
    <div class="form-group">
      <label>Name:</label>
      {{input type="text" value=model.name}}
    </div>
    <div class="form-group">
      <label>URL:</label>
      {{input type="text" value=model.url placeholder="must start with http://"}}
    </div>
    <div class="form-group">
      <label>Description:</label>
      {{input type="text" value=model.description}}
    </div>
    <div class="form-group">
      <label>Why you like it:</label>
      {{input type="text" value=model.why}}
    </div>
    <div class="form-group">
      <label>Photo URL</label>
      {{input type="text" value=model.photo placeholder="must start with http://"}}
    </div>

    <!-- <div>
      <label>Body:</label>
      {{textarea rows="5" value=model.url}}
    </div> -->

    <div class="form-group">
      <button class="btn btn-default" {{action 'save'}}>Save</button>
      <button class="btn btn-default" {{action 'cancel'}}>Cancel</button>
    </div>
  </form>
</div>
</div>
