<div class="container">
  <div class="jumbotron">

    <h1>List of cities</h1>


      <h2>{{#link-to 'random'}}Feeling lucky? CLICK ME to get a random suggestion{{/link-to}}</h2>
      <!-- <br>
      <br> -->
      <br>
      <h4>
        Click a city below to see its options.
      </h4>
      <br>
      {{#each model as |city|}}
        <br>
        <h2>
          {{#link-to 'city' city}}  <!-- each city is just the model or id. 'city' is the route name-->
            {{city.name}}
          {{/link-to}}
        </h2>
      {{/each}}


  </div>
</div>
